<div class="container">
  <div class="row">
    <div class="col">
      <h2>User info</h2>
        <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
          <label>Name</label><br>
          <%= f.text_field :name %><br>
          <labele>Image</labele><br>
          <%= f.file_field :profile_image, accept: "image/*"%><br>
          <label>Introduction</label><br>
          <%= f.text_area :introduction %><br>
          <%= f.submit "Update User" %>
        <% end %>
    </div>
  </div>
</div>