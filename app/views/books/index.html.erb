<div class="container">
  <div class="row">
    <div class="col-md-3">
      
      <%= render 'users/user_info', book: @book, user: @user %>
      
    </div>
    <div class="col-md-8">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td></td>
            <td>
              <%= link_to "#{book.title}",book_path(book.id) %>
            </td>
            <td><%= book.body %></td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
