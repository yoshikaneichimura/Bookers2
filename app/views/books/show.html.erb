<div class="container">
  <div class="row">
    <div class="col-md-3">

      <%= render 'users/user_info', book_new: @book_new, user: @user %>

    </div>
    <div class="col">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= image_tag @book.user.get_profile_image(100,100) %>
              <% end %><br>
              <%= link_to "#{@book.user.name}", user_path %>
            </td>
            <td>
              <%= link_to "#{@book.title}",book_path(@book.id) %>
            </td>
            <td><%= @book.body %></td>
            <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
            <td><%= link_to "Destroy", book_path(@book.id), remote: true, method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>