<div class="container">
  <div class="row">
    <div class="col-md-3">
      
      <%= render 'users/user_info', book: @book, user: @user %>
      
    </div>
    <div class="col">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td></td>
            <td>
              <%= link_to "#{@book.title}",book_path(@book.id) %>
            </td>
            <td><%= @book.body %></td>
            <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
            <td><%= link_to "Destroy", book_path(@book.id), remote: true, method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>