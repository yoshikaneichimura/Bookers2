<div class="container">
  <div class="row">
    <div class="col">
      <h2>User info</h2>
      <table>
      </table>
      <div class="row">
      </div>
      <h2>New book</h2>
        <%= form_with model: @book, url: books_path, method: :post do |f| %>
          <label>Title</label><br>
          <%= f.text_field :title %><br>
          <label>Opinion</label><br>
          <%= f.text_area :body %><br>
          <%= f.submit 'Create Book' %>
        <% end %>
    </div>
    <div class="col">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td></td>
            <td>
              <%= link_to "#{@book.title}",book_path(@book.id) %>
            </td>
            <td><%= @book.body %></td>
            <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
            <td><%= link_to "Destroy", book_path(@book.id), remote: true, method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>